    <children>
        <Button fx:id="button" layoutX="128.0" layoutY="75.0" onAction="#handleButtonAction" text="Click Me!">
         <effect>
            <Glow level="0.0">
               <input>
                  <SepiaTone />
               </input>
            </Glow>
         </effect></Button>
        <Label fx:id="label" layoutX="126" layoutY="120" minHeight="16" minWidth="69" />
    </children>
</AnchorPane>
